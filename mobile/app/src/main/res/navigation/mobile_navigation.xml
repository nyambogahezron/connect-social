<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.hezron.connect.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_explore"
        android:name="com.hezron.connect.ui.explore.ExploreFragment"
        android:label="Explore"
        tools:layout="@layout/fragment_explore" />

    <fragment
        android:id="@+id/navigation_create"
        android:name="com.hezron.connect.ui.create.CreatePostFragment"
        android:label="Create"
        tools:layout="@layout/fragment_create_post" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.hezron.connect.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.hezron.connect.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/postDetailFragment"
        android:name="com.hezron.connect.ui.detail.PostDetailFragment"
        android:label="Post"
        tools:layout="@layout/fragment_post_detail" />

    <fragment
        android:id="@+id/chatListFragment"
        android:name="com.hezron.connect.ui.chat.ChatListFragment"
        android:label="Messages"
        tools:layout="@layout/fragment_chat_list" />

    <fragment
        android:id="@+id/chatDetailFragment"
        android:name="com.hezron.connect.ui.chat.ChatDetailFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat_detail" />

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.hezron.connect.ui.profile.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.hezron.connect.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
        
    <fragment
        android:id="@+id/storyViewerFragment"
        android:name="com.hezron.connect.ui.story.StoryViewerFragment"
        android:label="Story"
        tools:layout="@layout/fragment_story_viewer" />
        
    <fragment
        android:id="@+id/userListFragment"
        android:name="com.hezron.connect.ui.profile.UserListFragment"
        android:label="Users"
        tools:layout="@layout/fragment_user_list" />

    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.hezron.connect.ui.profile.UserProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_user_profile" />
</navigation>